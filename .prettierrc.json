{
  "arrowParens": "always",
  "useTabs": true,
  "bracketSpacing": false,
  "endOfLine": "lf",
  "printWidth": 70,
  "quoteProps": "as-needed",
  "tabWidth": 2,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "organizeImportsSkipDestructiveCodeActions": true, // install the package ---> npm install --save-dev prettier-plugin-organize-imports
  "semi": true,
  "singleQuote": false,
  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    }
  ]
}
