{
  "arrowParens": "always",
  "useTabs": true,
  "bracketSpacing": false,
  "endOfLine": "lf",
  "printWidth": 70,
  "quoteProps": "as-needed",
  "tabWidth": 2,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "organizeImportsSkipDestructiveCodeActions": true, // npm install --save-dev prettier-plugin-organize-imports
  "semi": true,
  "singleQuote": false,
  "plugins": ["prettier-plugin-organize-imports"],
  "overrides": [
    {
      "files": ["**/*.js", "**/*.jsx"],
      "options": {
        "parser": "babel",
        "plugins": ["prettier-plugin-organize-imports"]
      }
    }
  ]
}
